<% if current_user %>
  <%= form_tag user_orders_path(current_user) do %>
    <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
            data-key="pk_test_osSOH0LyEEACshdRsLjyvGSz"
            data-image="/assets/marcy_stripe.png"
            data-name="<%= t('store.name') %>"
            data-description="<%= t('purchase') %>"
            data-label="<%= t('checkout') %>"
            data-amount="<%= price * 100 %>">
    </script>
  <% end %>
<% else %>
  <%= button_to t('checkout'), login_path, class: 'btn btn-custom-lighten', method: :get %>
<% end %>
